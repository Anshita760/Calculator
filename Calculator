    a=Float.parseFloat(str);
    Display.setText(str);
    }                                    

    private void EqualActionPerformed(java.awt.event.ActionEvent evt) {                                      
        // TODO add your handling code here:
         switch(oper){
            case '+':
             Display.setText("+"+(a+b));
             a=a+b;str="+";
                break;
            case '-':
              Display.setText("-"+(b-a));
              a=b-a;str="-";
                break;
            case '/':
              Display.setText("/"+(b/a));
              a=b/a;str="/";
                break;
            case '*':
              Display.setText("*"+(b*a));
              a=b*a;str="*";
                break;
        }
    }                                     

