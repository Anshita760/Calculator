    String str="";
    char oper;
    float a=0,b=0;
    
    private void Num1ActionPerformed(java.awt.event.ActionEvent evt) {                                     
        // TODO add your handling code here:
    str=str+"1";
    a=Float.parseFloat(str);
    Display.setText(str);
    }                                    
    
    private void Num4ActionPerformed(java.awt.event.ActionEvent evt) {                                     
